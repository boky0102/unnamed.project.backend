<%- include ('./partials/head') %>

<body class="grid grid-cols-7">
    <%- include ('./partials/sidebar') %>
    <div class="col-span-6 h-screen light-bg">
        <div class="flex flex-col w-11/12 row-sec mx-auto my-7">
            <div class=" column-container border-b-2 md:text-sm sm:text-xs border-b-slate-900 w-full main-bg grid grid-cols-<%= (data.columnNames.length + 1) %>">
                <% for(var g = 0; g < data.columnNames.length; g++) { %>

                    <% if(data.columnNames[g] === "uid") { %>
                        <div class="col-span-2 leading-8 ml-3"> <%= data.columnNames[g] %> </div>
                    <% }else {%>

                        <div class="col-span-1 leading-8 ml-3"> <%= data.columnNames[g] %> </div>
                    <% } %>
                    
                <% } %>
            </div>
            
                <% for(user of data.userData) { %>
                    <div class="row row-container text-xs w-full grid grid-cols-<%= data.columnNames.length + 1 %> ">
                        <div class="col-span-2 leading-6 ml-3"> <%= user.uid %> </div>
                        <div class="col-span-1 leading-6 ml-3"> <%= user.username %> </div>
                        <div class="col-span-1 leading-6 ml-3 long-text"> <%= user.auth_token %> </div>
                        <div class="col-span-1 leading-6 ml-3"> <%= user.field_of_study %> </div>
                        <div class="col-span-1 leading-6 ml-3"> <%= user.contributions %> </div>
                        <div class="col-span-1 leading-6 ml-3 long-text"> <%= user.avatar %> </div>
                        <div class="col-span-1 leading-6 ml-3"> <%= user.discordid %> </div>
                    </div>
                <% } %>

            
            
        </div>
    </div>
</body>

<%- include ('./partials/end') %>